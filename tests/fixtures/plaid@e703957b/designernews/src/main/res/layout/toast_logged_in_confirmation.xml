<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="uiModel"
                type="io.plaidapp.designernews.ui.login.LoginResultUiModel"/>

        <import type="io.plaidapp.R" alias="appR" />

    </data>

    <FrameLayout
            android:id="@+id/scrim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundScrimGradientColor="@{appR.color.scrim}"
            android:paddingTop="150dp">

        <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:alignmentMode="alignBounds"
                android:background="@drawable/dialog_background"
                android:columnCount="2"
                android:elevation="@dimen/z_app_bar"
                android:padding="@dimen/padding_normal"
                android:rowCount="2">

            <io.plaidapp.core.ui.widget.ForegroundImageView
                    android:id="@+id/avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="@dimen/padding_normal"
                    android:layout_rowSpan="2"
                    app:imageUrl="@{uiModel.portraitUrl}"
                    app:imagePlaceholder="@{appR.drawable.avatar_placeholder}"
                    app:circleCropImage="@{true}"
                    app:crossFadeImage="@{true}"/>

            <io.plaidapp.core.ui.widget.BaselineGridTextView
                    android:layout_marginEnd="@dimen/padding_normal"
                    android:paddingTop="@dimen/spacing_micro"
                    android:text="@string/logged_in_as"
                    android:textAppearance="@style/TextAppearance.Comment"/>

            <io.plaidapp.core.ui.widget.BaselineGridTextView
                    android:id="@+id/name"
                    android:layout_marginEnd="@dimen/padding_normal"
                    android:paddingTop="@dimen/spacing_micro"
                    android:textAppearance="@style/TextAppearance.CommentAuthor"
                    android:text="@{uiModel.displayName}"
                    tools:text="Nick B"/>

        </GridLayout>

    </FrameLayout>
</layout>
